<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Resto2025.Beranda.Dashboard" NavigationPage.HasNavigationBar="False" BackgroundColor="#f9f9f9"
             >
    <Grid RowDefinitions="Auto" Padding="20">
        <Border Stroke="LightGrey" StrokeThickness="0.1" StrokeShape="RoundRectangle 8" Background="White" Padding="15" >
            <Border.Shadow>
                <Shadow Brush="#333" Offset="1,1" Radius="1" Opacity="0.1" />
            </Border.Shadow>
            <Grid RowDefinitions="Auto" ColumnSpacing="10" ColumnDefinitions="*,Auto">
                <StackLayout Grid.Column="0" VerticalOptions="Center">
                    <Label Text="Kas" TextColor="#333" FontSize="Caption"></Label>
                    <Label Text="Rp 50.000.000" TextColor="#075E54" FontSize="Subtitle" FontFamily="FontBold"></Label>
                </StackLayout>
                <Image Source="tunai.png" Grid.Column="1" HeightRequest="30" TranslationX="-5"></Image>
            </Grid>
        </Border>
    </Grid>
</ContentPage>