<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Resto2025.Transaksi.ProdukMenu" NavigationPage.HasNavigationBar="False">

    <Grid ColumnDefinitions="0.60*,0.40*" ColumnSpacing="0" Padding="0" VerticalOptions="FillAndExpand">
        <!--KOLOM KIRI-->
        <Frame Grid.Column="0" BorderColor="Transparent" BackgroundColor="Transparent" Padding="10">
            
            <Grid ColumnDefinitions="0.25*,0.25*,0.25*,0.25*" RowDefinitions="Auto,*" ColumnSpacing="10" RowSpacing="10">
                
                <!--MENU NAVBAR-->
                
                <Frame Padding="10" x:Name="NavKonsumen" BackgroundColor="#075E54" BorderColor="Transparent" Grid.Column="0" Grid.Row="0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer x:Name="Tap_Konsumen" Tapped="Tap_Konsumen_Tapped"/>
                    </Frame.GestureRecognizers>
                    <StackLayout>
                        <Label Text="KONSUMEN" x:Name="LNavKonsumen"  TextColor="White" HorizontalOptions="EndAndExpand" FontFamily="FontBold"></Label>
                    </StackLayout>
                </Frame>
                <Frame Padding="10" x:Name="NavModePesanan" BackgroundColor="#F2F2F2" BorderColor="Transparent" Grid.Column="1" Grid.Row="0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer x:Name="Tap_ModePesanan" Tapped="Tap_ModePesanan_Tapped"/>
                    </Frame.GestureRecognizers>
                    <StackLayout>
                        <Label Text="MODE PESANAN" x:Name="LNavModePesanan" TextColor="#333" HorizontalOptions="EndAndExpand" FontFamily="FontBold"></Label>
                    </StackLayout>
                </Frame>
                <Frame Padding="10" x:Name="NavProduk" BackgroundColor="#F2F2F2" BorderColor="Transparent" Grid.Column="2" Grid.Row="0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer x:Name="Tap_Produk" Tapped="Tap_Produk_Tapped"/>
                    </Frame.GestureRecognizers>
                    <StackLayout>
                        <Label Text="MENU PRODUK" x:Name="LNavProduk" HorizontalOptions="EndAndExpand" TextColor="#333" FontFamily="FontBold"></Label>
                    </StackLayout>
                </Frame>
                <Frame Padding="10" x:Name="NavPembayaran" BackgroundColor="#F2F2F2" BorderColor="Transparent" Grid.Column="3" Grid.Row="0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer x:Name="Tap_Pembayaran" Tapped="Tap_Pembayaran_Tapped"/>
                    </Frame.GestureRecognizers>
                    <StackLayout>
                        <Label Text="PEMBAYARAN" x:Name="LNavPembayaran" TextColor="#333" HorizontalOptions="EndAndExpand" FontFamily="FontBold"></Label>
                    </StackLayout>
                </Frame>
                
             
                <!--FRAME-->

                <Frame BackgroundColor="#F9F9F9" BorderColor="Transparent" Padding="10" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4">
                    <Grid RowDefinitions="*" ColumnDefinitions="*" Padding="0">
                        <!--PRODUK MENU NAV TRIGGER-->
                        <!--KONSUMEN-->
                        <Grid ColumnDefinitions="0.5*,0.5*" x:Name="GridModeKonsumen" RowDefinitions="Auto,*" RowSpacing="10" ColumnSpacing="10" Padding="0"  IsVisible="True">
                            <!--PILIH GUEST-->
                            <Border BackgroundColor="White" StrokeShape="RoundRectangle 10" Grid.Column="0" Padding="10" StrokeThickness="0.1">
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">

                                    <Image Source="guest.png" HeightRequest="32" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="0"></Image>

                                    <Label Text="GUEST" FontSize="Subtitle" FontFamily="FontBold" VerticalOptions="Center"  Grid.Column="1"></Label>

                                    <StackLayout Grid.Column="2" VerticalOptions="Center" HorizontalOptions="Center">
                                        <RadioButton IsChecked="True" GroupName="TipeKonsumen"  x:Name="RadioGuest" CheckedChanged="RadioGuest_CheckedChanged" />
                                    </StackLayout>
                                </Grid>
                            </Border>
                            <!--PILIH MEMBER-->
                            <Border BackgroundColor="White" StrokeShape="RoundRectangle 10" Grid.Column="1" Padding="10" StrokeThickness="0.1">
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">

                                    <Image Source="member.png" HeightRequest="32" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="0"></Image>

                                    <Label Text="MEMBER" FontSize="Subtitle" FontFamily="FontBold" VerticalOptions="Center"  Grid.Column="1"></Label>

                                    <StackLayout Grid.Column="2" VerticalOptions="Center" HorizontalOptions="Center">
                                        <RadioButton IsChecked="False" x:Name="RadioMember"  GroupName="TipeKonsumen"  CheckedChanged="RadioMember_CheckedChanged"/>
                                    </StackLayout>
                                </Grid>
                            </Border>
                            <!--SEARCH KONSUMEN-->
                            <Border BackgroundColor="White" x:Name="FormSearchKonsumen" IsVisible="False" StrokeShape="RoundRectangle 10" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Padding="15" StrokeThickness="0.1">
                                <StackLayout Spacing="7">
                                    <Label Text="Nomor Handphone" TextColor="#333" FontFamily="FontBold"></Label>
                                    <Border BackgroundColor="White"  StrokeThickness="0.4" Padding="10,5" StrokeShape="RoundRectangle 10" Grid.Row="0" Grid.Column="1">
                                        <StackLayout Orientation="Horizontal">
                                            <Entry Completed="T_SearchNomor_Completed" Placeholder="Nomor handphone member: 08xx" MaxLength="15" x:Name="T_SearchNomor" Keyboard="Telephone" TextChanged="T_SearchNomor_TextChanged"></Entry>
                                            <!--simbol search-->
                                            <Image Source="search_gray.png" HeightRequest="24" HorizontalOptions="EndAndExpand" TranslationX="-3"></Image>
                                        </StackLayout>
                                    </Border>

                                    <HorizontalStackLayout VerticalOptions="Center" Spacing="10" x:Name="InfoSearch" IsVisible="False">
                                        <Image Source="check_green.png" HeightRequest="15" x:Name="image_info"></Image>
                                        <Label Text="konsumen berhasil ditemukan." FontSize="Caption" x:Name="text_info"></Label>
                                    </HorizontalStackLayout>

                                    <!--FORM REGISTER MEMBER-->
                                    <Grid x:Name="FormRegisKonsumen" ColumnDefinitions="*" RowDefinitions="Auto,*" RowSpacing="10" Margin="0,30,0,0">

                                        <Grid ColumnDefinitions="*,Auto,*" Grid.Row="0" ColumnSpacing="10">
                                            <BoxView HeightRequest="0.1" Grid.Column="0" Opacity="0.1" BackgroundColor="Black"></BoxView>
                                            <Label FontFamily="FontBold" Text="DAFTAR MEMBER BARU" Grid.Column="1"></Label>
                                            <BoxView HeightRequest="0.1" Grid.Column="2" Opacity="0.1" BackgroundColor="Black"></BoxView>
                                        </Grid>
                                        
                                        
                                        <!--FORM-->
                                        <StackLayout Spacing="10" Grid.Column="0" Grid.Row="1" Margin="0,15,0,0">
                                            <Border BackgroundColor="White"  StrokeThickness="0.4" Padding="10,5" StrokeShape="RoundRectangle 10">
                                                <Entry x:Name="ENamaKonsumen" Placeholder="Nama Lengkap"></Entry>
                                            </Border>
                                            <Border BackgroundColor="White"  StrokeThickness="0.4" Padding="10,5" StrokeShape="RoundRectangle 10">
                                                <Entry x:Name="ENomorHp" Completed="ENomorHp_Completed" TextChanged="ENomorHp_TextChanged" Keyboard="Telephone" Placeholder="Nomor Handphone"></Entry>
                                            </Border>
                                            <Border BackgroundColor="White"  StrokeThickness="0.4" Padding="10,5" StrokeShape="RoundRectangle 10">
                                                <Entry x:Name="EEmail" Placeholder="Email" Keyboard="Email"></Entry>
                                            </Border>
                                            <Border BackgroundColor="White"  StrokeThickness="0.4" Padding="10,5" StrokeShape="RoundRectangle 10">
                                                <Entry x:Name="EAlamat" Placeholder="Alamat Lengkap (Optional)"></Entry>
                                            </Border>

                                            <HorizontalStackLayout VerticalOptions="Center" Spacing="10" x:Name="InfoKonsumenRegister" IsVisible="False">
                                                <Image HeightRequest="15" x:Name="image_infokonsumenregister"></Image>
                                                <Label Text="" FontSize="Caption" x:Name="text_infokonsumenregister"></Label>
                                            </HorizontalStackLayout>

                                            <Button Text="DAFTARKAN MEMBER" x:Name="BDaftarMember" Clicked="BDaftarMember_Clicked" Margin="0,10" HorizontalOptions="End" FontFamily="FontBold"></Button>
                                        </StackLayout>
                                        
                                    </Grid>
                                </StackLayout>
                            </Border>
                        </Grid>
                        <!--FILTER KATEGORI MENU DAN SEARCH-->
                        <Grid ColumnDefinitions="0.20*,0.80*" x:Name="GridProduk" ColumnSpacing="10" Padding="0" RowDefinitions="Auto,*" RowSpacing="10" IsVisible="False">
                            <!--KATEGORI MENU-->
                            <Border BackgroundColor="White"  StrokeThickness="0.4" Padding="10,0" StrokeShape="RoundRectangle 10" Grid.Row="0" Grid.Column="0">
                                <Picker Title="Pilih Kategori" FontSize="Subtitle" x:Name="Picker_Kategori" SelectedIndexChanged="Picker_Kategori_SelectedIndexChanged" >

                                </Picker>
                            </Border>
                            <!--SEARCH-->
                            <Border BackgroundColor="White"  StrokeThickness="0.4" Padding="10,0" StrokeShape="RoundRectangle 10" Grid.Row="0" Grid.Column="1">
                                <StackLayout Orientation="Horizontal">
                                    <Entry Placeholder="Cari Menu. Ex: Nasi Goreng" x:Name="T_Search" Completed="T_Search_Completed"></Entry>
                                    <!--simbol search-->
                                    <Image Source="search_gray.png" HeightRequest="24" HorizontalOptions="EndAndExpand" TranslationX="-3"></Image>
                                </StackLayout>
                            </Border>
                            <!--PRODUK LIST-->
                            <CollectionView x:Name="CV_ListProduk" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout Orientation="Vertical"
                                            Span="5"
                                            VerticalItemSpacing="10"
                                            HorizontalItemSpacing="10" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid HorizontalOptions="Center">
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="Produk_Tapped" CommandParameter="{Binding .}" />
                                            </Grid.GestureRecognizers>

                                            <Border StrokeShape="RoundRectangle 10" StrokeThickness="0" BackgroundColor="White">
                                                <Border.Shadow>
                                                    <Shadow Brush="Black" Offset="-2,1" Radius="5" Opacity="0.1" />
                                                </Border.Shadow>
                                                
                                                <VerticalStackLayout>

                                                    <Grid>
                                                        <Image Aspect="AspectFit">
                                                            <Image.Source>
                                                                <UriImageSource Uri="{Binding url_gambar}" CacheValidity="30.00:00:00" />
                                                            </Image.Source>
                                                        </Image>

                                                        <Border HorizontalOptions="End" VerticalOptions="Start" Margin="8" Padding="8,4" BackgroundColor="#99000000" StrokeThickness="0" StrokeShape="RoundRectangle 15">
                                                            <HorizontalStackLayout Spacing="4">
                                                                <Image Source="goods.png" HeightRequest="12" VerticalOptions="Center"/>
                                                                <Label Text="{Binding stok}" TextColor="White" FontSize="12" VerticalOptions="Center"/>
                                                            </HorizontalStackLayout>
                                                        </Border>
                                                    </Grid>

                                                    <Grid Padding="12" ColumnDefinitions="*, Auto">
                                                        <VerticalStackLayout Grid.Column="0" Spacing="2">
                                                            <Label Text="{Binding nama_produk}" FontAttributes="Bold" FontSize="14" LineBreakMode="TailTruncation" TextColor="#075E54"/>
                                                            <Label Text="{Binding new_harga_jual}" TextColor="#FF2D2D" FontAttributes="Bold" FontSize="13"/>
                                                        </VerticalStackLayout>

                                                        <VerticalStackLayout Grid.Column="1" VerticalOptions="End" HorizontalOptions="End" Spacing="4">
                                                            <Image Source="cart.png" HeightRequest="24"></Image>
                                                            <Label Text="● ●" FontSize="10" TextColor="LightGray" HorizontalOptions="Center"/>
                                                        </VerticalStackLayout>
                                                    </Grid>

                                                </VerticalStackLayout>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <ActivityIndicator x:Name="LoadingIndicator" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" IsRunning="False" IsVisible="False" Color="#075E54" 
                                               HorizontalOptions="Center"
                                VerticalOptions="Center" />
                        </Grid>
                        <!--MODE PESANAN-->
                        <Grid ColumnDefinitions="0.5*,0.5*" x:Name="GridModePesanan" RowDefinitions="Auto,*" RowSpacing="10" ColumnSpacing="10" Padding="0"  IsVisible="False">
                            <!-- Kolom 1 -->
                            <Border BackgroundColor="White" StrokeShape="RoundRectangle 10" Grid.Column="0" Padding="10" StrokeThickness="0.1">
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">

                                    <Image Source="takeaway.png" HeightRequest="32" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="0"></Image>

                                    <Label Text="TAKEAWAY" FontSize="Subtitle" FontFamily="FontBold" VerticalOptions="Center"  Grid.Column="1"></Label>

                                    <StackLayout Grid.Column="2" VerticalOptions="Center" HorizontalOptions="Center">
                                        <RadioButton IsChecked="True" GroupName="TipePesanan"  x:Name="RadioTakeaway" CheckedChanged="RadioTakeaway_CheckedChanged" />
                                    </StackLayout>
                                </Grid>
                            </Border>
                            <!-- Kolom 2 -->
                            <Border BackgroundColor="White" StrokeShape="RoundRectangle 10" Grid.Column="1" Padding="10" StrokeThickness="0.1">
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">

                                    <Image Source="dine.png" HeightRequest="32" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="0"></Image>

                                    <Label Text="DINE IN" FontSize="Subtitle" FontFamily="FontBold" VerticalOptions="Center"  Grid.Column="1"></Label>

                                    <StackLayout Grid.Column="2" VerticalOptions="Center" HorizontalOptions="Center">
                                        <RadioButton IsChecked="False" x:Name="RadioDine"  GroupName="TipePesanan"  CheckedChanged="RadioDine_CheckedChanged"/>
                                    </StackLayout>
                                </Grid>
                            </Border>

                            <!--Daftar Meja-->
                            <Border BackgroundColor="White" x:Name="DenahMejaContainer"  StrokeShape="RoundRectangle 10" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Padding="10" StrokeThickness="0.1">
                                <ScrollView Orientation="Both">

                                    <AbsoluteLayout x:Name="DenahMejaLayout">

                                        <AbsoluteLayout.GestureRecognizers>
                                            <PinchGestureRecognizer PinchUpdated="OnPinchUpdated" />
                                        </AbsoluteLayout.GestureRecognizers>

                                    </AbsoluteLayout>

                                </ScrollView>
                            </Border>
                        </Grid>
                        <!--PEMBAYARAN-->

                        <Grid ColumnDefinitions="*" x:Name="GridModePembayaran" RowDefinitions="*" Padding="0"  IsVisible="False">

                            <ListView HasUnevenRows="True"  Grid.Row="0" Grid.Column="0" x:Name="lv_metodepembayaran" SeparatorVisibility="None" SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <Border Margin="0,0,0,15" BackgroundColor="White" StrokeShape="RoundRectangle 10" StrokeThickness="0.1">
                                                <Grid Padding="15" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15" RowDefinitions="Auto">
                                                    <Image Source="{Binding kategori,StringFormat='{0}.png'}" HeightRequest="32" VerticalOptions="Center"  Grid.Column="0"></Image>

                                                    <StackLayout Grid.Column="1" VerticalOptions="Center">
                                                        <Label Text="{Binding kategori}" TextTransform="Uppercase" FontSize="Subtitle" FontFamily="FontBold" TextColor="#333"></Label>
                                                        <Label Text="{Binding no_rek, StringFormat='No.Rek : {0}'}" FontFamily="FontRegular" VerticalOptions="Center"></Label>
                                                    </StackLayout>

                                                    <StackLayout Grid.Column="2" VerticalOptions="Center">
                                                        <RadioButton IsChecked="False" GroupName="TipePembayaran"  x:Name="RadioTipePembayaran" CheckedChanged="RadioTipePembayaran_CheckedChanged"  />
                                                    </StackLayout>

                                                </Grid>
                                            </Border>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Grid>
                </Frame>
                
            </Grid>
            
        </Frame>
        <!--KOLOM KANAN--> 
        <Frame Grid.Column="1" Padding="0" BorderColor="Transparent" >
            <Frame BackgroundColor="#F9F9F9" Padding="10" Margin="10" BorderColor="Transparent" >
                <Grid ColumnDefinitions="*" RowDefinitions="0.65*,0.35*" RowSpacing="5">

                    <!--LIST KERANJANG-->
                    <Frame Padding="15" Grid.Column="0" Grid.Row="0" BorderColor="Transparent">
                        <Grid ColumnDefinitions="*" RowDefinitions="Auto,*" RowSpacing="12">

                            <StackLayout Orientation="Horizontal" Spacing="15" Grid.Row="0">
                                <Image Source="cart_green.png" HeightRequest="16"></Image>
                                <Label Text="KERANJANG PESANAN" FontSize="Caption" TextColor="#075E54" FontFamily="FontBold"></Label>
                                <!--TOTAL ITEM-->
                                <Label Text="TOTAL ITEM (0)" x:Name="Summary_TotalItem" FontSize="Caption"  HorizontalOptions="EndAndExpand" TextColor="#b3b3b3" FontFamily="FontRegular"></Label>

                            </StackLayout>
                            <!--LIST ITEM DETAIL-->
                            <ListView Grid.Row="1" x:Name="LV_Keranjang" HasUnevenRows="True" SeparatorVisibility="None" BackgroundColor="Transparent" SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell x:Name="EditJumlah" Tapped="ItemKeranjang_Tapped">

                                            <Grid Padding="0,0,1.2,10" ColumnDefinitions="Auto,*,Auto,Auto,Auto" ColumnSpacing="15">

                                                <Border Grid.Column="0" WidthRequest="50" HeightRequest="50" StrokeShape="RoundRectangle 8" StrokeThickness="0">
                                                    <Image Source="{Binding UrlGambar}" Aspect="AspectFill" HeightRequest="50" WidthRequest="50"/>
                                                </Border>
                                                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                                    <Label Text="{Binding NamaProduk}" LineBreakMode="TailTruncation" FontFamily="FontBold" MaxLines="1" FontSize="Caption" TextColor="#333"/>
                                                    <Label Text="{Binding FormattedHargaJual}" TextColor="#075E54" FontFamily="FontRegular" FontSize="11"/>
                                                </VerticalStackLayout>

                                                <Image Grid.Column="2" VerticalOptions="Center" HeightRequest="14" Source="{Binding IkonModePesanan}">

                                                </Image>

                                                <Border Grid.Column="3" Stroke="LightGray" StrokeThickness="1" Padding="16,8" StrokeShape="RoundRectangle 5" VerticalOptions="Center">
                                                    <StackLayout>
                                                        <StackLayout.GestureRecognizers>
                                                            <TapGestureRecognizer />
                                                        </StackLayout.GestureRecognizers>
                                                        <Label Text="{Binding Jumlah}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                    </StackLayout>
                                                </Border>
                                                <Label Grid.Column="4" Text="{Binding FormattedSubtotal}" TextColor="#075E54" FontAttributes="Bold" FontSize="Caption" VerticalOptions="Center" HorizontalTextAlignment="End"/>
                                            </Grid>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </Grid>
                    </Frame>

                    <Frame Grid.Row="1" Grid.Column="0" BorderColor="Transparent" Padding="10">
                        <Grid RowDefinitions="Auto,*"  Grid.Column="0"  RowSpacing="5" Padding="0">

                            <StackLayout Grid.Row="0"  Orientation="Horizontal" Spacing="50">
                                <RadioButton x:Name="TotalRadioButton"  Content="Total" GroupName="TotalKeranjang" IsChecked="True"  CheckedChanged="RadioButton_CheckedChanged"></RadioButton>
                                <RadioButton x:Name="DetailRadioButton"  Content="Detail" GroupName="TotalKeranjang" IsChecked="False"  CheckedChanged="RadioButton_CheckedChanged"></RadioButton>
                            </StackLayout>

                            <ContentView x:Name="Kanan_Total" Grid.Row="1" IsVisible="True">
                                <ScrollView>       
                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*" RowSpacing="5">
                                    
                                    <!--METODE PEMBAYARAN-->
                                    <Grid Grid.Column="0"  Grid.Row="0" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10" RowDefinitions="Auto,Auto" RowSpacing="5">

                                        <Image Source="wallet.png" HeightRequest="14" Grid.Column="0"></Image>
                                        <Label Text="Metode Pembayaran" TextColor="#B3B3B3" FontSize="Caption" FontFamily="FontBold" Grid.Column="1"></Label>
                                        <Label Text="Tunai" x:Name="Summary_MetodeBayar" LineBreakMode="TailTruncation" FontSize="Caption" TextColor="#FF2D2D" FontFamily="FontBold" Grid.Column="2"></Label>
                                        <BoxView HeightRequest="0.5" BackgroundColor="#b3b3b3" Opacity="0.1" Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="1"></BoxView>

                                    </Grid>

                                    <!--PRODUK-->
                                    <Grid Grid.Column="0"  Grid.Row="1" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10" RowDefinitions="Auto,Auto" RowSpacing="5">

                                        <Image Source="food.png" HeightRequest="14" Grid.Column="0"></Image>
                                        <Label Text="Produk" TextColor="#B3B3B3"  FontSize="Caption" FontFamily="FontBold" Grid.Column="1"></Label>
                                        <Label Text="Rp 0" x:Name="Summary_TotalProduk" FontSize="Caption" LineBreakMode="TailTruncation" TextColor="#FF2D2D" FontFamily="FontBold" Grid.Column="2"></Label>
                                        <BoxView HeightRequest="0.5" BackgroundColor="#b3b3b3" Opacity="0.1" Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="1"></BoxView>

                                    </Grid>

                                    <!--TOTALSUB-->
                                    <Grid Grid.Column="0"  Grid.Row="2" ColumnDefinitions="*,Auto" ColumnSpacing="10" RowDefinitions="Auto,Auto" RowSpacing="5">

                                        <StackLayout Grid.Column="0">
                                            <Label Text="Subtotal" FontSize="Caption" TextColor="#B3B3B3" FontFamily="FontBold" ></Label>
                                            <Label Text="Produk + Takeaway+ Admin - (Potongan + Promosi)" FontSize="Caption" TextColor="#B3b3b3"></Label>
                                        </StackLayout>

                                        <Label Text="Rp 0" x:Name="Summary_Subtotal" LineBreakMode="TailTruncation" TextColor="#075E54" FontFamily="FontBold" Grid.Column="2"></Label>
                                        <BoxView HeightRequest="0.5" BackgroundColor="#b3b3b3" Opacity="0.1" Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="1"></BoxView>

                                    </Grid>

                                    <!--PPN-->
                                    <Grid Grid.Column="0"  Grid.Row="3" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10" RowDefinitions="Auto" RowSpacing="5">

                                        <Image Source="tax.png" HeightRequest="14" Grid.Column="0"></Image>
                                        <Label Text="" x:Name="PPNText" FontSize="Caption" TextColor="#B3B3B3" FontFamily="FontBold" Grid.Column="1"></Label>
                                        <Label Text="Rp 0" x:Name="Summary_PPN" FontSize="Caption" LineBreakMode="TailTruncation" TextColor="#075E54" FontFamily="FontBold" Grid.Column="2"></Label>


                                    </Grid>

                                    <!--SUBMIT CEKOUT-->
                                    <Frame Grid.Column="0" Grid.Row="4" Padding="0" BorderColor="Transparent">
                                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                                            <Switch IsToggled="False" x:Name="SwitchInvoice" Toggled="SwitchInvoice_Toggled"  HorizontalOptions="Start" VerticalOptions="Center" Grid.Column="0"/>
                                            <Label Text="Pembayaran Nanti (Invoice)" x:Name="LabelSwitch" TextColor="#333333" FontSize="Caption" Grid.Column="1" VerticalOptions="Center"></Label>
                                            <Button ImageSource="checkout19.png" Clicked="Summary_TotalCheckout_Clicked" Text="Rp 0" x:Name="Summary_TotalCheckout" TextColor="White" FontFamily="FontBold"  Grid.Column="2"></Button>
                                        </Grid>
                                    </Frame>
                                    
                                </Grid>
                                </ScrollView>
                            </ContentView>

                            <ContentView x:Name="Kanan_Detail" Grid.Row="1" IsVisible="False">
                                <ScrollView>
                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*" RowSpacing="5">

                                    <Grid ColumnDefinitions="*,*" Grid.Row="0" ColumnSpacing="5">
                                        <!--KONSUMEN-->
                                        <Grid Grid.Column="0"  Grid.Row="0" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10" RowDefinitions="Auto,Auto" RowSpacing="5">

                                            <Image Source="customer.png" HeightRequest="14" Grid.Column="0"></Image>
                                            <Label Text="Konsumen" TextColor="#B3B3B3" FontSize="Caption" FontFamily="FontBold" Grid.Column="1"></Label>
                                            <Label Text="GUEST" x:Name="SummaryNamaKonsumen" FontSize="Caption" LineBreakMode="TailTruncation" TextColor="#333333" FontFamily="FontBold" Grid.Column="2"></Label>
                                            <BoxView HeightRequest="0.5" BackgroundColor="#b3b3b3" Opacity="0.1" Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="1"></BoxView>

                                        </Grid>

                                        <!--MODE PESANAN-->
                                        <Grid Grid.Column="1"  Grid.Row="0" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10" RowDefinitions="Auto,Auto" RowSpacing="5">

                                            <Image Source="modepsanan.png" HeightRequest="14" Grid.Column="0"></Image>
                                            <Label Text="Mode Pesanan" FontSize="Caption" TextColor="#B3B3B3" FontFamily="FontBold" Grid.Column="1"></Label>
                                            <Label Text="Takeaway" x:Name="Summary_ModePesanan" FontSize="Caption" LineBreakMode="TailTruncation" TextColor="#333333" FontFamily="FontBold" Grid.Column="2"></Label>
                                            <BoxView HeightRequest="0.5" BackgroundColor="#b3b3b3" Opacity="0.1" Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="1"></BoxView>

                                        </Grid>
                                    </Grid>
                                    <!--TAKEAWAY-->
                                    <Grid Grid.Column="0"  Grid.Row="1" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10" RowDefinitions="Auto,Auto" RowSpacing="5">

                                        <Image Source="bag_takeaway.png" HeightRequest="14" Grid.Column="0"></Image>
